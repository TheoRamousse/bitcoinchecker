<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/row_container"
    android:padding="1dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iconNotification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/image_showing_if_the_notification_is_sended_when_the_crypto_is_up_or_down_to_the_value" />
    <TextView
        android:id="@+id/contentNotification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"/>
    <TextView
        android:textColor="@color/gray"
        android:id="@+id/creationDateNotification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"/>
</LinearLayout>